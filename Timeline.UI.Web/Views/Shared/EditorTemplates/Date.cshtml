@model mko.Timeline.IDate
@*
    (c) Martin Korneffel, Stuttgart 2017
    Implementiert mit HTML5 Datumselement
*@

@{
    var Name = ViewData.ModelMetadata.PropertyName;
    var Value = string.Format("{0:D4}-{1:D2}-{2:D2}", Model.Year, Model.Month, Model.Day);

    var hiddenDayName = string.Format("{0}.Day", Name);
    var hiddenMonthName = string.Format("{0}.Month", Name);
    var hiddenYearName = string.Format("{0}.Year", Name);
}


<input type="hidden" name="@hiddenDayName" id="@hiddenDayName" value="@Model.Day" />
<input type="hidden" name="@hiddenMonthName" id="@hiddenMonthName" value="@Model.Month" />
<input type="hidden" name="@hiddenYearName" id="@hiddenYearName" value="@Model.Year" />

<input type="date"
       class="form-control"
       id="@Name"
       name="_@Name" value="@Value" />

