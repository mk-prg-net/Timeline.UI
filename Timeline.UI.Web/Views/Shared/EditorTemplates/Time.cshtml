    Implementiert mit HTML5 Zeitelement
*@

@{
    var Name = ViewData.ModelMetadata.PropertyName;
    var Value = string.Format("{0:D2}:{1:D2}:{2:D2}", Model.Hour, Model.Minute, Model.Second);

    var hiddenSecName = string.Format("{0}.Second", Name);
    var hiddenMinName = string.Format("{0}.Minute", Name);
    var hiddenHrName = string.Format("{0}.Hour", Name);
}


<input type="hidden" name="@hiddenSecName" id="@hiddenSecName" value="@Model.Second" />
<input type="hidden" name="@hiddenMinName" id="@hiddenMinName" value="@Model.Minute" />
<input type="hidden" name="@hiddenHrName" id="@hiddenHrName" value="@Model.Hour" />

<input type="time"
       class="form-control"
       id="@Name"
       name="_@Name" value="@Value" />


